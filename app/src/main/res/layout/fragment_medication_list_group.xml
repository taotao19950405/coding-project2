<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/list_group"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp"
	android:orientation="horizontal"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<ImageView
			android:id="@+id/medication_icon"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:padding="7dp"
			android:src="@drawable/pill"/>

	<LinearLayout
		  android:layout_width="0dp"
		  android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="12dp"
                  android:paddingRight="15dp"
									android:paddingBottom="2dp"
                  android:orientation="horizontal"
                  android:id="@+id/display_name">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/list_display_name"
                  android:paddingLeft="15dp"
									android:fontFamily="sans-serif-condensed"
									android:textSize="16sp"
									android:textStyle="bold"
									android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="12dp"
                  android:paddingRight="15dp"
                  android:orientation="horizontal"
                  android:id="@+id/display_dosage">


			<TextView xmlns:android="http://schemas.android.com/apk/res/android"
								android:id="@+id/list_display_dosage"
								android:paddingLeft="15dp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

			<TextView xmlns:android="http://schemas.android.com/apk/res/android"
								android:id="@+id/list_display_dosage_unit"
								android:paddingLeft="2dp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

	</LinearLayout>
</LinearLayout>

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginRight="10dp"
		android:id="@+id/alarm_indicator">

	<ImageView
		android:id="@+id/alarm_indicator_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:src="@drawable/alarm"/>

	</RelativeLayout>

<RelativeLayout
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:padding="5dp"
	android:id="@+id/indicator">

	<ImageView
		android:id="@+id/indicator_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"/>

</RelativeLayout>

</LinearLayout>

